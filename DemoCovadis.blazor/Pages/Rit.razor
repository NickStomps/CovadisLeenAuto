@page "/rit"
@inject RitHttpClient RitHttpClient;
@attribute [Authorize]

@using DemoCovadis.Shared.Dtos;
@using DemoCovadis.Shared.Clients;
@using DemoCovadis.Blazor.Components
@using Microsoft.AspNetCore.Authorization


<PageTitle>Home</PageTitle>
<PageHeader><h5>Rit</h5></PageHeader>

@if (Ritten != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Auto ID</th>
                <th>Auto</th>
                <th>Kilometer Gereden</th>
                <th>Bestuurder</th>
                <th>Begin Adres</th>
                <th>Eind Adres</th>
                <th>Vertrek Tijd</th>
                <th>Aankomst Tijd</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rit in Ritten)
            {
                <tr>
                    <td>@rit.id</td>
                    <td>@rit.AutoId</td>
                    <td>@rit.auto</td>
                    <td>@rit.kilometerGereden</td>
                    <td>@rit.bestuurder</td>
                    <td>@rit.beginAdres</td>
                    <td>@rit.eindAdres</td>
                    <td>@rit.vertrekTijd</td>
                    <td>@rit.aankomstTijd</td>
                </tr>
            }
        </tbody>
    </table>

}

<div class="d-flex align-items-center login-alignment">
    <div class="form-login w-100 h-100">
        <EditForm Model="Request" OnSubmit="CreateRit">
            <PageHeader><h5>Maak User</h5></PageHeader>

            <div class="form-floating">
                <InputText id="naam" class="form-control" @bind-Value="Request.Naam" placeholder="Naam" />
                <label for="naam">Naam</label>
            </div>

            <div class="form-floating">
                <InputText id="email" class="form-control" @bind-Value="Request.Email" placeholder="Email" />
                <label for="email">Email address</label>
            </div>

            <div class="form-floating">
                <InputText id="password" class="form-control" @bind-Value="Request.Wachtwoord" placeholder="Password" type="password" />
                <label for="password">Password</label>
            </div>



            <br />

            <button class="btn btn-primary w-100 py-2" type="submit">Maak Rit</button>
        </EditForm>
    </div>
</div>

@code {
    public RitDto[] Ritten { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("OnInitializedAsync");
        Ritten = await RitHttpClient.GetRitten();
    }

    public async Task CreateRit()
    {
        await RitHttpClient.CreateRit(Request);
    }
}